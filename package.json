{
  "name": "water-abstraction-permit-repository",
  "version": "1.21.0",
  "description": "Web app for Water Abstraction Permit service",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/water-abstraction-permit-repository"
  },
  "scripts": {
    "test": "lab",
    "test:travis": "lab -t 55 -m 0 --coverage-path ./src/ -r lcov -o coverage/lcov.info -r console -o stdout",
    "test-cov-html": "lab -r html -o coverage.html",
    "migrate": "node scripts/create-schema && db-migrate up --verbose",
    "migrate:down": "db-migrate down --verbose",
    "migrate:create": "db-migrate create --sql-file --",
    "lint": "eslint ./src/**/*.js",
    "codecov": "codecov",
    "version": "auto-changelog -p --commit-limit false && git add CHANGELOG.md"
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "auto-changelog": "^1.10.2",
    "code": "^5.2.0",
    "codecov": "^3.0.4",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.3.0",
    "del": "^3.0.0",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "istanbul": "^0.4.5",
    "lab": "^15.4.1",
    "run-sequence": "^2.2.1",
    "snyk": "^1.89.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "@envage/water-abstraction-helpers": "^2.4.0",
    "airbrake-js": "^1.6.0-beta.1",
    "blipp": "^3.0.0",
    "boom": "^7.2.0",
    "deep-map": "^1.5.0",
    "dotenv": "^4.0.0",
    "good": "^8.1.1",
    "good-winston": "^4.0.0",
    "hapi": "^17.2.3",
    "hapi-auth-jwt2": "^8.0.1",
    "hapi-pg-rest-api": "https://github.com/DEFRA/hapi-pg-rest-api.git#v4.0",
    "hoek": "^5.0.3",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.0.0",
    "moment": "^2.20.1",
    "path": "^0.12.7",
    "pg": "^7.4.1",
    "request": "^2.88.0"
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "public/"
    ]
  }
}
